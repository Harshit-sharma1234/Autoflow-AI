{
  "name": "autoflow-ai",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack GenAI-powered automation platform",
  "scripts": {
    "dev": "pnpm --parallel --filter api --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm run --filter './apps/*' build",
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "start": "pnpm run --parallel --filter './apps/*' start",
    "start:api": "pnpm --filter api start",
    "start:web": "pnpm --filter web start",
    "lint": "pnpm run --parallel lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm run --parallel test",
    "clean": "pnpm run --parallel clean && rimraf node_modules",
    "prepare": "husky install"
  },
  "keywords": [
    "genai",
    "automation",
    "workflow",
    "ai",
    "typescript",
    "nextjs",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}